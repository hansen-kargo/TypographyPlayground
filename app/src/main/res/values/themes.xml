<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TypographyPlayground" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="textAppearanceHeadline5">@style/TextAppearance.TypographyPlayground.Headline5</item>

        <item name="android:textViewStyle">@style/TestWidget.TypographyPlayground.TextView</item>
        <item name="android:buttonStyle">@style/TestWidget.TypographyPlayground.Button</item>

        <item name="android:text">hello world</item>
    </style>

    <style name="Theme.TypographyPlayground.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TypographyPlayground.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TypographyPlayground.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    

</resources>